<section class="modal-overlay" id="ovarlay">
    <div class="modal" id="modal">

        <div class="modal-header">
            <h3>Atualizar Carro</h3>
            <a href="/" id="close-modal-put"><i class="bi bi-x"></i></a>
        </div>

        <div class="modal-body">
            <form class="form-modal" action="/update/<%= carro.id %>" method="POST">
                <label for="imagem" id="imagem" name="imagem">Imagem</label>
                <input type="text" id="imagem" name = "imagem" required value = "<%= carro.imagem %>"> 
  
                <label for="nome" id="nome" name="nome">Nome</label>
                <input type="text" id="nome" name = "nome" required value= "<%= carro.nome %>">
  
                <label for="carroceria" id="carroceria" name="carroceria" name="carroceria">Carroceria</label>
                <input type="text" id="carroceria" name = "carroceria" required value = "<%= carro.carroceria %>">
  
                <label for="cambio" id="cambio" name="cambio">Câmbio</label>
                <input type="text" id="cambio" name = "cambio" required value = "<%= carro.cambio %>">
  
                <label for="ano" id="ano" name="ano">Ano</label>
                <input type="text" id="ano" name = "ano" required value = "<%= carro.ano %>"> 
  
                <label for="velocidade" id="velocidade" name="velocidade">Velocidade Máxima</label>
                <input type="text" id="velocidade" name = "velocidade" required value = "<%= carro.velocidade %>"> 
                <button id="btnCadastrar" type="submit">Atualizar</button>

            </form>
        </div>

    </div>        
</section>